<!DOCTYPE html>
<html>
<head>
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="manifest" href="/manifest.json">
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            background: #000;
            overflow: hidden;
        }

        .container {
            position: relative;
            width: 100vw;
            height: 100vh;
        }

        .container video {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100vw;
            height: 100vh;
            transform: translate(-50%, -50%);
            object-fit: cover;   /* 9:16 꽉 채우기 */
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 26px;
            color: white;
            background-color: rgba(0, 0, 0, 0.55);
            padding: 12px 24px;
            border-radius: 6px;
            pointer-events: none;
            z-index: 10;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/main" id="mainLink">
            <video
                id="clickableMedia"
                autoplay
                muted
                loop
                playsinline
                preload="auto"
            ></video>
            <div class="text-overlay">전송을 완료했습니다</div>
        </a>
    </div>

    <script>
        // 기존 이미지 경로 그대로 사용 (mp4만 교체)
        const videoPaths = [
            "/static/img/main_img/1.mp4",
            "/static/img/main_img/2.mp4",
            "/static/img/main_img/3.mp4",
            "/static/img/main_img/4.mp4",
            "/static/img/main_img/5.mp4",
            "/static/img/main_img/6.mp4",
            "/static/img/main_img/7.mp4"
        ];

        const randomVideo = videoPaths[Math.floor(Math.random() * videoPaths.length)];
        const video = document.getElementById("clickableMedia");

        video.src = randomVideo;

        // 모바일 자동재생 보강
        video.addEventListener("loadeddata", () => {
            video.play().catch(() => {});
        });

        // 6초 뒤 메인 이동
        setTimeout(() => {
            document.getElementById("mainLink").click();
        }, 6000);
    </script>
</body>
</html>
