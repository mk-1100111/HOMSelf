<!DOCTYPE html>
<html>
<head>
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="manifest" href="/manifest.json">
    <style>
        body {
            text-align: center;
            margin: 0; 
        }

        .container {
            position: relative;
            display: inline-block;
        }

        .container img {
            max-height: 95vh;
            width: auto; 
            cursor: pointer; 
            object-fit: cover;            
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 25px;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/main">
            <img id="clickableImage" src="" alt="Random Image">
            <div class="text-overlay">전송을 완료했습니다</div>
        </a>
    </div>

    <script>
        // 배열에 이미지 경로 추가
        const imagePaths = [
            "public/static/img/main_img/main1.png",
            "public/static/img/main_img/main2.png",
            "public/static/img/main_img/main3.png",
            "public/static/img/main_img/main4.png",
            "public/static/img/main_img/main5.png",
            "public/static/img/main_img/main6.png",
        ];

        // 랜덤으로 이미지 선택
        const randomImage = imagePaths[Math.floor(Math.random() * imagePaths.length)];

        // 선택된 이미지를 img 요소에 설정
        const clickableImage = document.getElementById('clickableImage');
        clickableImage.src = randomImage;

        // 새 창 열기와 크기 조절
        let newWindow;

        window.onload = function() {
            if (!sessionStorage.getItem('popupOpened')) {
                // 새 창 열기
                newWindow = window.open(
                    '/main', // 이동할 페이지 경로
                    '_blank', // 새 창으로 열기
                    'width=800,height=600,top=100,left=100,scrollbars=yes,resizable=yes'
                );

                if (newWindow) {
                    newWindow.focus(); // 새 창으로 포커스 이동

                    // 창의 높이를 가져와 너비만 조정
                    setTimeout(() => {
                        const currentHeight = newWindow.outerHeight || newWindow.innerHeight; // 창 높이 가져오기
                        newWindow.resizeTo(800, currentHeight); // 너비만 800으로 변경
                    }, 500); // 창이 로드된 후 실행
                } else {
                    alert("팝업이 차단되었습니다. 팝업 차단을 해제해주세요.");
                }

                // 세션 스토리지에 팝업 상태 저장
                sessionStorage.setItem('popupOpened', 'true');
            }
        };
    </script>
</body>
</html>
