<!DOCTYPE html>
<html>
<head>
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="manifest" href="/manifest.json">

    <!-- Î∏åÎùºÏö∞Ï†Ä ÏÑ†ÏöîÏ≤≠ ÌûåÌä∏ (Î≥¥Ï°∞Ïö©) -->
    <link rel="preload" as="video" href="/static/img/main_img/1.mp4" type="video/mp4">

    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            background: #000;
            overflow: hidden;
        }

        .container {
            position: relative;
            width: 100vw;
            height: 100vh;
        }

        video {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100vw;
            height: 100vh;
            transform: translate(-50%, -50%);
            object-fit: cover;
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 26px;
            color: white;
            background: rgba(0,0,0,0.55);
            padding: 12px 24px;
            border-radius: 6px;
            pointer-events: none;
            z-index: 10;
        }
    </style>
</head>
<body>
<div class="container">
    <a href="/main" id="mainLink">
        <video id="video" autoplay muted loop playsinline></video>
        <div class="text-overlay">Ï†ÑÏÜ°ÏùÑ ÏôÑÎ£åÌñàÏäµÎãàÎã§</div>
    </a>
</div>

<script>
    const videoPaths = [
        "/static/img/main_img/1.mp4",
        "/static/img/main_img/2.mp4",
        "/static/img/main_img/3.mp4",
        "/static/img/main_img/4.mp4",
        "/static/img/main_img/5.mp4",
        "/static/img/main_img/6.mp4",
        "/static/img/main_img/7.mp4"
    ];

    const selected = videoPaths[Math.floor(Math.random() * videoPaths.length)];
    const video = document.getElementById("video");

    // üî• ÌïµÏã¨: ÎØ∏Î¶¨ fetch Ìï¥ÏÑú BlobÏúºÎ°ú Ï∫êÏã±
    async function preloadAndPlay(src) {
        try {
            const res = await fetch(src, { cache: "force-cache" });
            const blob = await res.blob();
            const blobUrl = URL.createObjectURL(blob);

            video.src = blobUrl;
            await video.play();
        } catch (e) {
            // Ïã§Ìå® Ïãú Î∞îÎ°ú ÏõêÎ≥∏ Ïû¨ÏÉù
            video.src = src;
            video.play().catch(() => {});
        }
    }

    preloadAndPlay(selected);

    // 6Ï¥à Îí§ Î©îÏù∏ Ïù¥Îèô
    setTimeout(() => {
        document.getElementById("mainLink").click();
    }, 6000);
</script>
</body>
</html>
