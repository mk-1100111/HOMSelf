<!DOCTYPE html>
<html>
<head>
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="manifest" href="/manifest.json">
    <style>
        body {
            text-align: center;
            margin: 0;
        }

        .container {
            position: relative;
            display: inline-block;
        }

        .container video {
            max-height: 95vh;
            width: auto;
            cursor: pointer;
            object-fit: cover;
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 25px;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 20px;
            border-radius: 5px;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/main" id="mainLink">
            <video
                id="clickableMedia"
                autoplay
                muted
                loop
                playsinline
                preload="auto"
            ></video>
            <div class="text-overlay">전송을 완료했습니다</div>
        </a>
    </div>

    <script>
        // 기존 이미지 경로와 동일한 위치 사용
        // public/static/img/main_img/1.mp4 ~ 7.mp4
        const videoPaths = [
            "public/static/img/main_img/1.mp4",
            "public/static/img/main_img/2.mp4",
            "public/static/img/main_img/3.mp4",
            "public/static/img/main_img/4.mp4",
            "public/static/img/main_img/5.mp4",
            "public/static/img/main_img/6.mp4",
            "public/static/img/main_img/7.mp4"
        ];

        const randomVideo = videoPaths[Math.floor(Math.random() * videoPaths.length)];

        const clickableMedia = document.getElementById("clickableMedia");
        clickableMedia.src = randomVideo;

        // 모바일 자동재생 보강
        clickableMedia.addEventListener("loadeddata", () => {
            clickableMedia.play().catch(() => {});
        });

        let touchStartTime = 0;
        let isDragging = false;

        document.addEventListener("contextmenu", e => e.preventDefault());

        document.addEventListener("touchstart", () => {
            touchStartTime = Date.now();
            isDragging = false;
        });

        document.addEventListener("touchmove", () => {
            isDragging = true;
        });

        document.addEventListener("touchend", event => {
            const touchDuration = Date.now() - touchStartTime;
            if (!isDragging && touchDuration > 300) {
                event.preventDefault();
                event.target.click();
            }
        });

        // 6초 뒤 메인으로 이동
        setTimeout(() => {
            document.getElementById("mainLink").click();
        }, 6000);
    </script>
</body>
</html>
